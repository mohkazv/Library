<Window x:Class="Library.BookDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="BookDashboard" Height="280" Width="550">
    <Grid Margin="0,0,-5.667,-8.373">
        <Button x:Name="AddNewBookBtn" Content="Add New Book" HorizontalAlignment="Left" Margin="70,40,0,0" VerticalAlignment="Top" Height="96" Width="98" FontFamily="Ink Free" FontWeight="Bold" Click="AddNewBookBtn_Click"/>
        <Button x:Name="EditBookInformationBtn" Content="Edit Book&#xA; Information" HorizontalAlignment="Left" Margin="220,40,0,0" VerticalAlignment="Top" Height="96" Width="98" FontFamily="Ink Free" FontWeight="Bold" Click="EditBookInformationBtn_Click"/>
        <Button x:Name="BorrowBookBtn" Content="Borrow Book" HorizontalAlignment="Left" Margin="370,40,0,0" VerticalAlignment="Top" Height="96" Width="98" FontFamily="Ink Free" FontWeight="Bold" Click="BorrowBookBtn_Click"/>
        <Separator HorizontalAlignment="Left" Margin="51,161,0,0" VerticalAlignment="Top" Height="20" Width="442" FontFamily="Ink Free" FontWeight="Bold"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="214,193,0,0" VerticalAlignment="Top" Width="87" Height="24" FontFamily="Ink Free" FontWeight="Bold" Click="BackBtn_Click"/>

    </Grid>
</Window>
