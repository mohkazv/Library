<Window x:Class="Library.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="SignIn" Height="240" Width="420">
    <Grid Margin="0,0,-1.667,-4.333">
        <TextBox x:Name="InfoTxtBx" HorizontalAlignment="Left" Margin="92,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontFamily="Ink Free" Height="24"/>
        <TextBox x:Name="PassworTxtBx" HorizontalAlignment="Left" Margin="91,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontWeight="Bold" FontFamily="Ink Free" Height="24"/>
        <Label Content="Password " HorizontalAlignment="Left" Margin="88,95,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" FontSize="14" Width="71"/>
        <Button x:Name="SignInBtn" Content="Sign In" HorizontalAlignment="Left" Margin="152,156,0,0" VerticalAlignment="Top" Width="88" FontFamily="Ink Free" FontWeight="Bold" FontSize="14" Height="25" Click="SignInBtn_Click"/>
        <Label Content="Email or Username or Phone Number" HorizontalAlignment="Left" Margin="87,45,0,0" VerticalAlignment="Top" Width="239" FontFamily="Ink Free" FontWeight="Bold" FontSize="14" Height="34"/>

    </Grid>
</Window>
