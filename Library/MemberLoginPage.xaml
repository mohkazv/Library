<Window x:Class="Library.MemberLoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="MemberLoginPage" Height="450" Width="550">
    <Grid Margin="0,0,-4.667,0.667">
        <Label Content="Welcome ! &#xA;to Library Management System ." HorizontalAlignment="Left" Margin="32,69,0,0" VerticalAlignment="Top" Width="485" Height="80" FontFamily="Ink Free" FontSize="22" FontWeight="Bold"/>
        <Button x:Name="SignUpbtn" Content="Sign Up" HorizontalAlignment="Left" Margin="174,290,0,0" VerticalAlignment="Top" Width="170" FontFamily="Ink Free" FontSize="14" RenderTransformOrigin="0.431,-1.218" Height="50" Click="SignUpButton_Click" FontWeight="Bold"/>
        <Separator HorizontalAlignment="Left" Margin="81,143,0,0" VerticalAlignment="Top" Height="86" RenderTransformOrigin="0.5,0.5" Width="389">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="SignInbtn_Copy" Content="Sign In" HorizontalAlignment="Left" Margin="174,230,0,0" VerticalAlignment="Top" Width="170" FontFamily="Ink Free" FontSize="14" RenderTransformOrigin="0.431,-1.218" Height="50" Click="SigninButton_Click" FontWeight="Bold"/>


    </Grid>
</Window>
