<Window x:Class="Library.BorrowBackBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Borrow Back Book" Height="180" Width="335.333">
    <Grid Margin="0,0,4.333,-0.333">
        <Label Content="Book Id :" HorizontalAlignment="Left" Margin="25,8,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="75"/>
        <TextBox x:Name="BookIdTxtBx" HorizontalAlignment="Left" Margin="87,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold" Height="17"/>
        <Label Content="User Id :" HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="75"/>
        <TextBox x:Name="UserIdTxtBx" HorizontalAlignment="Left" Margin="85,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold" Height="17"/>
        <Separator HorizontalAlignment="Left" Margin="33,68,0,0" VerticalAlignment="Top" Height="23" Width="272"/>
        <Button x:Name="BorrowBtn" Content="Borrow Back" HorizontalAlignment="Left" Margin="78,100,0,0" VerticalAlignment="Top" Width="86" Height="24" FontWeight="Bold" FontFamily="Ink Free" Click="BorrowBtn_Click"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="182,101,0,0" VerticalAlignment="Top" Width="86" Height="24" FontWeight="Bold" FontFamily="Ink Free" Click="BackBtn_Click"/>

    </Grid>
</Window>
