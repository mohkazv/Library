<Window x:Class="Library.BorrowBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Borrow Book Page" Height="200" Width="620">
    <Grid Margin="0,0,-1.667,-0.373">
        <Label Content="Book Id :" HorizontalAlignment="Left" Margin="25,8,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="75"/>
        <TextBox x:Name="BookIdTxtBx" HorizontalAlignment="Left" Margin="87,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold" Height="17"/>
        <Label Content="User Id :" HorizontalAlignment="Left" Margin="318,8,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="75"/>
        <TextBox x:Name="UserIdTxtBx" HorizontalAlignment="Left" Margin="379,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold" Height="17"/>
        <Separator HorizontalAlignment="Left" Margin="85,86,0,0" VerticalAlignment="Top" Height="46" Width="483"/>
        <Button x:Name="BorrowBtn" Content="Borrow" HorizontalAlignment="Left" Margin="244,129,0,0" VerticalAlignment="Top" Width="56" Height="24" FontWeight="Bold" FontFamily="Ink Free" Click="BorrowBtn_Click"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="337,129,0,0" VerticalAlignment="Top" Width="56" Height="24" FontWeight="Bold" FontFamily="Ink Free" Click="BackBtn_Click"/>
        <Label Content="Return Date :" HorizontalAlignment="Left" Margin="62,56,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="88"/>
        <Label Content="Deadline Date :" HorizontalAlignment="Left" Margin="315,58,0,88.04" VerticalAlignment="Center" FontFamily="Ink Free" FontWeight="Bold" Height="25" Width="93"/>
        <DatePicker x:Name="ReturnDateDP" HorizontalAlignment="Left" Margin="156,58,0,0" VerticalAlignment="Top" Width="133" FontFamily="Ink Free" FontWeight="Bold"/>
        <DatePicker x:Name="DeadlineDateDp" HorizontalAlignment="Left" Margin="421,59,0,0" VerticalAlignment="Top" Width="133" FontFamily="Ink Free" FontWeight="Bold"/>

    </Grid>
</Window>
