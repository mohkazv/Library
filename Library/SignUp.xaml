<Window x:Class="Library.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="SignUp" Height="280" Width="660">
    <Grid Margin="0,0,-2.667,-13.373">
        <Label Content="First Name :" HorizontalAlignment="Left" Margin="25,14,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="FirstNameTxtBx" HorizontalAlignment="Left" Margin="102,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="LastName :" HorizontalAlignment="Left" Margin="254,14,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold"/>
        <TextBox x:Name="LastNameTxtBx" HorizontalAlignment="Left" Margin="325,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Email :" HorizontalAlignment="Left" Margin="56,45,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="EmailTxtBx" HorizontalAlignment="Left" Margin="102,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Username :" HorizontalAlignment="Left" Margin="336,45,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="UsernameTxtBx" HorizontalAlignment="Left" Margin="406,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="339,70,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="PhoneNumberTxtBx" HorizontalAlignment="Left" Margin="102,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Phone Number :" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <Label Content="Birth Date :" HorizontalAlignment="Left" Margin="166,142,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <DatePicker x:Name="BirthDateDP" HorizontalAlignment="Left" Margin="243,142,0,0" VerticalAlignment="Top" Width="223" FontFamily="Ink Free" FontWeight="Bold" Height="25"/>
        <Separator HorizontalAlignment="Left" Margin="66,169,0,0" VerticalAlignment="Top" Height="24" Width="522" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.183"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="SignUpBtn" Content="Sign Up" HorizontalAlignment="Left" Margin="271,201,0,0" VerticalAlignment="Top" Width="84" FontFamily="Ink Free" FontWeight="Bold" Height="23" Click="SignUpBtn_Click"/>
        <Label Content="Education :" HorizontalAlignment="Left" Margin="174,107,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="EducationTxtBx" HorizontalAlignment="Left" Margin="245,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontFamily="Ink Free" FontWeight="Bold"/>
        <ComboBox x:Name="GenderCmBx" Height="21" Margin="529,16,39,0" VerticalAlignment="Top" Text="Gender" FontFamily="Ink Free" FontWeight="Bold" IsEditable="true"  IsReadOnly="true" 
            IsDropDownOpen="False" StaysOpenOnEdit="True" RenderTransformOrigin="0.555,0.551"  >
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.031"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ComboBox.RenderTransform>
            <ComboBoxItem Content="Male" HorizontalAlignment="Left" Width="117.333333333333"/>
            <ComboBoxItem Content="Female" HorizontalAlignment="Left" Width="117.333333333333"/>
        </ComboBox>
        <PasswordBox x:Name="PasswordTxtBx" HorizontalAlignment="Left" Margin="406,76,0,0" VerticalAlignment="Top" Width="212" PasswordChar="*" FontFamily="Ink Free" FontWeight="Bold"/>

    </Grid>
</Window>
