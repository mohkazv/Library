<Window x:Name="EditMemberInformatin1" x:Class="Library.EditMemberInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Edit Member Information Page" Height="325.277" Width="672.053" Loaded="EditMemberInformatin1_Loaded">
    <Grid Margin="-3,3,-0.667,-11" HorizontalAlignment="Left" Width="669">
        <Label Content="First Name :" HorizontalAlignment="Left" Margin="25,14,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="FirstNameTxtBx" HorizontalAlignment="Left" Margin="102,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="LastName :" HorizontalAlignment="Left" Margin="254,14,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold"/>
        <TextBox x:Name="LastNameTxtBx" HorizontalAlignment="Left" Margin="325,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontFamily="Ink Free" FontWeight="Bold"/>
        <ComboBox x:Name="GenderCmBx" Height="20" Margin="532,16,55,0" VerticalAlignment="Top" Text="Gender" FontFamily="Ink Free" FontWeight="Bold" IsEditable="true"  IsReadOnly="true" 
            IsDropDownOpen="False" StaysOpenOnEdit="True" >
            <ComboBoxItem Content="Male" HorizontalAlignment="Left" Width="117.333333333333"/>
            <ComboBoxItem Content="Female" HorizontalAlignment="Left" Width="117.333333333333"/>
        </ComboBox>
        <Label Content="Email :" HorizontalAlignment="Left" Margin="56,45,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="EmailTxtBx" HorizontalAlignment="Left" Margin="102,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Username :" HorizontalAlignment="Left" Margin="336,45,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="UsernameTxtBx" HorizontalAlignment="Left" Margin="406,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Password :" HorizontalAlignment="Left" Margin="339,70,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="PhoneNumberTxtBx" HorizontalAlignment="Left" Margin="102,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontFamily="Ink Free" FontWeight="Bold"/>
        <Label Content="Phone Number :" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <Label Content="Birth Date :" HorizontalAlignment="Left" Margin="197,136,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24" RenderTransformOrigin="0.513,0.745"/>
        <DatePicker x:Name="BirthDateDP" HorizontalAlignment="Left" Margin="273,136,0,0" VerticalAlignment="Top" Width="218" FontFamily="Ink Free" FontWeight="Bold" Height="27"/>
        <Separator HorizontalAlignment="Left" Margin="102,214,0,0" VerticalAlignment="Top" Height="24" Width="522" RenderTransformOrigin="0.5,0.5">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.183"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="SaveBtn" Content="Save" HorizontalAlignment="Left" Margin="220,236,0,0" VerticalAlignment="Top" Width="101" FontFamily="Ink Free" FontWeight="Bold" Height="23" Click="SaveBtn_Click"/>
        <Button x:Name="RemoveMemberBtn" Content="Remove Member" HorizontalAlignment="Left" Margin="298,190,0,0" VerticalAlignment="Top" Width="101" FontFamily="Ink Free" FontWeight="Bold" Height="23" Click="RemoveMemberBtn_Click"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="375,236,0,0" VerticalAlignment="Top" Width="101" FontFamily="Ink Free" FontWeight="Bold" Height="23" Click="BackBtn_Click"/>
        <Separator HorizontalAlignment="Left" Margin="152,154,0,0" VerticalAlignment="Top" Height="40" Width="397"/>
        <Label Content="Education :" HorizontalAlignment="Left" Margin="206,105,0,0" VerticalAlignment="Top" FontFamily="Ink Free" FontWeight="Bold" Height="24"/>
        <TextBox x:Name="EducationTxtBx" HorizontalAlignment="Left" Margin="275,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" FontFamily="Ink Free" FontWeight="Bold"/>
        <PasswordBox x:Name="PasswordTxtBx" HorizontalAlignment="Left" Margin="406,75,0,0" VerticalAlignment="Top" Width="212" PasswordChar="*" FontFamily="Ink Free" FontWeight="Bold"/>

    </Grid>
</Window>
